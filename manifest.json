{
  "manifest_version": 3,
  "name": "Work Hours Progress Bar",
  "version": "1.0",
  "description": "Displays a live work hours progress bar on any website.",
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png"
  },
  "action": {
    "default_title": "Work Hours Progress Bar",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/16.png",
      "32": "icons/32.png",
      "48": "icons/48.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ],
  "permissions": ["storage", "identity", "notifications", "contextMenus", "tabs"],
  "optional_permissions": [],
  "host_permissions": ["https://*.googleapis.com/", "https://day-progress-bar-backend-production.up.railway.app/"],
  "background": {
    "service_worker": "background.js"
  },
  "oauth2": {
    "client_id": "${966163827588-v9k3ht1k0a9acbsgt26n831lda9he8qm.apps.googleusercontent.com}",
    "scopes": ["https://www.googleapis.com/auth/userinfo.email"]
  },
  "web_accessible_resources": [{
    "resources": ["subscription.html", "subscription.js", "payment.html", "payment.js", "api.js", "mock-stripe.html", "popup.html", "popup.js"],
    "matches": ["<all_urls>"]
  }]
}
