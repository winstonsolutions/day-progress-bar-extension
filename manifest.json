{
  "manifest_version": 3,
  "name": "Work Hours Progress Bar",
  "version": "1.0",
  "description": "Displays a live work hours progress bar on any website.",
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png"
  },
  "permissions": [
    "storage",
    "identity",
    "notifications",
    "contextMenus",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*",
    "https://*.googleapis.com/",
    "https://*.accounts.dev/",
    "https://accounts.dev/",
    "https://api.clerk.dev/",
    "http://localhost:3000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Work Hours Progress Bar",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/16.png",
      "32": "icons/32.png",
      "48": "icons/48.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["extension-utils.js", "content-message-bridge.js", "content.js"],
      "css": ["style.css"],
      "run_at": "document_end"
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'; connect-src 'self' https://*.accounts.dev https://api.clerk.dev http://localhost"
  },
  "oauth2": {
    "client_id": "${966163827588-v9k3ht1k0a9acbsgt26n831lda9he8qm.apps.googleusercontent.com}",
    "scopes": ["https://www.googleapis.com/auth/userinfo.email"]
  },
  "web_accessible_resources": [
    {
      "resources": [
        "popup.html",
        "clerk-config-check.html",
        "style.css",
        "extension-utils.js",
        "icons/*"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "externally_connectable": {
    "matches": [
      "https://*.accounts.dev/*",
      "http://localhost:3000/*"
    ],
    "accepts_tls_channel_id": false
  }
}
